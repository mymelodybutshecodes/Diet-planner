  <div class="container">
    <h1>Wellness Planner</h1>
    <label>Height (cm)</label>
    <input type="number" id="height" placeholder="e.g. 165">

    <label>Weight (kg)</label>
    <input type="number" id="weight" placeholder="e.g. 60">

    <label>Age</label>
    <input type="number" id="age" placeholder="e.g. 25">

    <label>Gender</label>
    <select id="gender">
      <option value="female">Female</option>
      <option value="male">Male</option>
      <option value="other">Other</option>
    </select>

    <label>Ideal Weight Goal (kg)</label>
    <input type="number" id="idealWeight" placeholder="e.g. 55">

    <label>Body Build</label>
    <select id="build">
      <option value="slim">Slim</option>
      <option value="average">Average</option>
      <option value="muscular">Muscular</option>
    </select>

    <button onclick="generatePlan()">Get My Plan</button>

    <div class="result" id="result"></div>
  </div>

  <script>
    function generatePlan() {
      const height = parseFloat(document.getElementById('height').value);
      const weight = parseFloat(document.getElementById('weight').value);
      const age = parseInt(document.getElementById('age').value);
      const gender = document.getElementById('gender').value;
      const idealWeight = parseFloat(document.getElementById('idealWeight').value);
      const build = document.getElementById('build').value;

      if (!height || !weight || !age || !idealWeight) {
        document.getElementById('result').innerHTML = "<p>Please fill in all fields.</p>";
        return;
      }

      let dietTips = "";
      let workoutTips = "";

      if (weight > idealWeight) {
        dietTips = "• Focus on lean proteins, whole grains, and fresh vegetables.<br>• Reduce sugar and processed food.<br>• Drink 2–3L of water daily.";
        workoutTips = "• 30–45 mins of cardio (brisk walking, cycling, dance).<br>• Strength training 3x a week.<br>• Stretch daily.";
      } else if (weight < idealWeight) {
        dietTips = "• Increase healthy calories: nuts, seeds, avocados.<br>• Eat protein-rich meals.<br>• Stay consistent with meals.";
        workoutTips = "• Light strength training to build muscle.<br>• Limit intense cardio.<br>• Yoga or pilates for flexibility.";
      } else {
        dietTips = "• Maintain balanced diet with all macros.<br>• Continue hydration.<br>• Eat seasonal fruits & veggies.";
        workoutTips = "• Mix cardio & strength evenly.<br>• Pilates or yoga twice a week.<br>• Keep active throughout the day.";
      }

      const output = `
        <strong>Diet Tips:</strong><br>${dietTips}<br><br>
        <strong>Workout Tips:</strong><br>${workoutTips}
      `;
      document.getElementById('result').innerHTML = output;
    }
  </script>
